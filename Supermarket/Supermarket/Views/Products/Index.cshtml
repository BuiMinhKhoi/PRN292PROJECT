@model IEnumerable<Supermarket.Models.Product>

@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h2>Products</h2>

<p>
    @Html.ActionLink("Create New", "Create")

    @using (Html.BeginForm("Index","Products",FormMethod.Get))
    {
        <p>Product Name: @Html.TextBox("id") 
                         <input type="submit" value="Search"/>
        </p>
    }
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Quantity per unit
        </th>
        <th>
           Unit price
        </th>
        <th>
            Unit in stock
        </th>
        <th>
           Unit on order
        </th>
        <th>
            Status
        </th>
        <th>
           Image
        </th>
        <th>
            Category
        </th>
        <th>
           Suplier
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuantityPerUnit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitInStock)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitOnOrder)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Image)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CatName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Supplier.SupName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ProID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProID })
        </td>
    </tr>
}

</table>
